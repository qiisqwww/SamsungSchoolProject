<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Основная тема приложения -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/darkThemeStatusBarColor</item>
    </style>

    <!-- Тема для загрузочного экрана -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget" tools:override="true">
        <item name="tabBackground">@drawable/tab_background</item>
    </style>
</resources>