<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkThemeBackgroundColor"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutList"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        tools:listitem="@android:layout/list_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="end|bottom"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <Button
            android:id="@+id/createNewTemplateButton"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkThemeBackgroundColor"
            android:text="@string/new_workout_template_button"
            />
        <Button
            android:id="@+id/addNewWorkout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkThemeBackgroundColor"
            android:text="@string/add_new_workout"
            />

    </LinearLayout>

</FrameLayout>